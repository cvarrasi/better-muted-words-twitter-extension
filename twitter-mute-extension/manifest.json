{
  "manifest_version": 3,
  "name": "Better Muted Words",
  "version": "1.0",
  "description": "Manage muted words on X.com/Twitter",
  "permissions": [
    "activeTab",
    "storage",
    "favicon"
  ],
  "host_permissions": [
    "https://api.github.com/*",
    "https://raw.githubusercontent.com/*",
    "https://twitter.com/settings/muted_keywords*"
  ],
  "action": {
    "default_icon": "favicon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}